/* ========================================================================
 * Bem style helpers.
 * ======================================================================== */

/**
 * Variables
 * ======================================================================== */

$bem = extend({
        p: {
            base:    '',
            layout:  'l',
            utility: 'u',
            state:   'is',
            js:      'js',
        },

        s: {
            p:  '-',             // Bem prefix separator
            e:  '__',            // Bem element separator
            m:  '--',            // Bem mod separator
            mp: '_',             // Bem mod parameter separator
        },

        use_shortcuts: false,
    }, $bem)

// $bem_prefix        ?= ''
